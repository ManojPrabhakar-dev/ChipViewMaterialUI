<UserControl x:Class="ChipViewApp.ADC_Arrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipViewApp"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d" Height="40">
    <Grid>
        <ed:LineArrow Name="lineArrow_up" Fill="#FFF4F4F5" Stroke="Black" VerticalAlignment="Stretch" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5"
                      d:LayoutOverrides="VerticalAlignment">
            <ed:LineArrow.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.5"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ed:LineArrow.RenderTransform>
        </ed:LineArrow>
    </Grid>
</UserControl>
